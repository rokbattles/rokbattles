{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ROK Battles",
  "version": "0.1.1",
  "identifier": "com.rokbattles.tauri",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "ROK Battles",
        "width": 800,
        "height": 600,
        "fullscreen": false,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "publisher": "Sylke Technologies, LLC",
    "copyright": "(c) 2025 Sylke Technologies, LLC and contributors",
    "homepage": "https://rokbattles.com",
    "license": "Apache-2.0, MIT",
    "targets": ["nsis", "dmg"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
