{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ROK Battles",
  "version": "1.0.0-rc.1",
  "identifier": "com.rokbattles.tauri",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "ROK Battles",
        "width": 800,
        "height": 600,
        "fullscreen": false,
        "resizable": true
      }
    ],
    "security": {
      "csp": {
        "default-src": "'self'",
        "base-uri": "'self'",
        "form-action": "'self'",
        "object-src": "'none'",
        "frame-ancestors": "'none'",
        "img-src": "'self' data: blob:",
        "media-src": "'self' data: blob:",
        "font-src": "'self' data:",
        "worker-src": "'self' blob:",
        "connect-src": "'self' ipc: https://rokbattles.com https://platform.rokbattles.com https://ingress.rokbattles.com",
        "script-src": "'self'",
        "style-src": "'self' 'unsafe-inline'"
      },
      "devCsp": {
        "default-src": "'self' http://localhost:1420",
        "base-uri": "'self'",
        "form-action": "'self'",
        "object-src": "'none'",
        "frame-ancestors": "'none'",
        "img-src": "'self' data: blob:",
        "media-src": "'self' data: blob:",
        "font-src": "'self' data:",
        "worker-src": "'self' blob:",
        "connect-src": "'self' ipc: ws://localhost:1420 http://localhost:1420 https://rokbattles.com https://platform.rokbattles.com https://ingress.rokbattles.com",
        "script-src": "'self' 'unsafe-eval' http://localhost:1420",
        "style-src": "'self' 'unsafe-inline' http://localhost:1420"
      }
    }
  },
  "bundle": {
    "active": true,
    "publisher": "Sylke Technologies, LLC",
    "copyright": "(c) 2025 Sylke Technologies, LLC and contributors",
    "homepage": "https://rokbattles.com",
    "license": "Apache-2.0, MIT",
    "targets": ["nsis", "dmg", "app"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDIwMDgzRUM1OTFCQjkxMDcKUldRSGtidVJ4VDRJSUNkSFQ5cnN2Z2lUbkx1ek94WS8yZFJLRTNhMWl3NEt3TGY3MHp1TjRsWEsK",
      "endpoints": ["https://github.com/rokbattles/rokbattles/releases/latest/download/latest.json"]
    }
  }
}
